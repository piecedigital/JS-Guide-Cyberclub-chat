<section>
	<div class="page-wrap">
		<div class="form-box x-pad-1_0 y-pad-1_0 center-justify mid-blue-bg border-radius-0_5">
			<h1 class="very-light-blue">Sign Up or Login</h1>
			<br><br>
			<input id="signup-tab" type="radio" name="options" class="hidden" {{sign-checked}}>
			<label for="signup-tab">Signup</label><!--
			--><input id="login-tab" type="radio" name="options" class="hidden" {{log-checked}}><!--
			--><label for="login-tab">Login</label>
			<div id="sign-up-in" class="border-radius-0_5">
				<div id="signup">
					<form action="/signup" method="POST" class="x-pad-0_5 y-pad-0_5">
						<label for="" class="bold dark-blue">Email</label>
						<input type="email" name="email" placeholder="Email" value="">
						<label for="" class="bold dark-blue">Username</label>
						<input type="text" name="username" placeholder="Username" value="" minlength=4 maxlength=20>
						<label for="" class="bold dark-blue">Password</label>
						<input type="password" name="password" placeholder="Password" value="">
						<label for="" class="bold dark-blue">Confirm Password</label>
						<input type="password" name="passwordconfirm" placeholder="Confirm password" value="">
						<input type="hidden" name="formtype" value="regular">
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
						<button>Submit</button>
					</form>
				</div>
				<div id="login">
					<form action="/login" method="POST" class="x-pad-0_5 y-pad-0_5">
						<label for="" class="bold dark-blue">Username</label>
						<input type="text" name="username" placeholder="username">
						<label for="" class="bold dark-blue">Password</label>
						<input type="password" name="password" placeholder="Password">
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
						<div class="right-justify">
							<a href="/request-pass">Forgot password?</a>
						</div>
						<button>Submit</button>
					</form>
				</div>
			</div>
			<span id="err-msg">{{msg}}</span>
		</div>
	</div>
</section>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="js/touch.js"></script>