<section>
	<div id="username" class="hidden" data-username="{{username}}"></div>
	<div id="room" class="hidden" data-room="{{room}}"></div>
	<div class="page-wrap">
		<div class="x-pad-1_0 y-pad-1_0">
			<div id="chat-box">
				<div class="parent fillout">
					<div id="messages"></div>
					<div id="side-bar">
						<div class="parent fillout">
							<form id="logout" action="/logout">
								<button>Logout</button>
							</form>
							<div id="room-list">
								<ul>
									{{#each rooms}}
									<li class="room block parent" data-roomname="{{roomName}}" data-topic="{{topic}}" data-mods="{{minMods}}">
										<span>{{roomName}}</span>
										<ul>
											{{#each users}}
											<li class="user parent">{{username}}</li>
											{{/each}}
										</ul>
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
					</div>
					<div id="tools"></div>
					<form id="chat">
						<div class="fillout parent">
							<div id="list-box"></div>
							<input id="chat-val" type="text" name="msg" placeholder="Enter chat message..." {{disable}}>
							<button type="submit" {{disable}}>SEND</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/chat-handle.js"></script>
<script type="text/javascript" src="/js/drag-n-drop.js"></script>
