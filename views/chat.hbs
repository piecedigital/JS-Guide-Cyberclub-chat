	}
	.chat > .teen-mod {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.teenMod}},
		inset 0 .4em 0 0 {{levelColors.teenMod}} !important;
	}
	.chat > .junior-mod {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.juniorMod}},
		inset 0 .4em 0 0 {{levelColors.juniorMod}} !important;
	}
	.chat > .moderator {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.moderator}},
		inset 0 .4em 0 0 {{levelColors.moderator}} !important;
	}
	.chat > .admin {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.admin}},
		inset 0 .4em 0 0 {{levelColors.admin}} !important;
	}
	/*room list icon*/
	.icon.regular {
		background: {{levelColors.regular}};
	}
	.icon.teen-mod {
		background: {{levelColors.teenMod}};
	}
	.icon.junior-mod {
		background: {{levelColors.juniorMod}};
	}
	.icon.moderator {
		background: {{levelColors.moderator}};
	}
	.icon.admin {
		background: {{levelColors.admin}};
	}
</style>