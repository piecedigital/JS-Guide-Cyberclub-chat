<section>
	<div id="user-data" class="hidden" data-username="{{username}}" data-access="{{accessLevel}}"></div>
	<div id="room" class="hidden" data-room="{{room}}"></div>
	<div class="page-wrap">
		<div class="x-pad-1_0 y-pad-1_0">
			<div id="chat-box">
				<div class="parent fillout">
					<div id="messages"></div>
					<div id="side-bar">
						<div class="parent fillout">
							<form id="logout" action="/logout">
								<button>Logout</button>
							</form>
							<div id="room-list">
								<ul>
									{{#each rooms}}
									<li data-roomname="{{roomname}}" data-topic="{{topic}}" class="room block parent">
										<span class="name">{{roomname}}</span>
										<ul>
											{{#each users}}
											<li class="user parent" data-usernameFull="{{usernameFull}}" data-username="{{username}}" data-displayname="{{usernameFull}}">{{usernameFull}}</li>
											{{/each}}
										</ul>
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
					</div>
					<div id="tools"></div>
					<form id="chat-form">
						<div class="fillout parent">
							<div id="list-box"></div>
							<input id="chat-val" type="text" name="msg" placeholder="Enter chat message..." disabled>
							<button type="submit" disabled>SEND</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
	var bannedWords = "{{bannedWords}}";
	var bannedArr = bannedWords.split(",").map(function(elem, ind) {
		return elem;
	});
</script>
<style type="text/css" id="level-colors">
	.regular {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.regular}},
		inset 0 .4em 0 0 {{levelColors.regular}} !important;
	}
	.teen-mod {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.teenMod}},
		inset 0 .4em 0 0 {{levelColors.teenMod}} !important;
	}
	.junior-mod {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.juniorMod}},
		inset 0 .4em 0 0 {{levelColors.juniorMod}} !important;
	}
	.moderator {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.moderator}},
		inset 0 .4em 0 0 {{levelColors.moderator}} !important;
	}
	.admin {
		box-shadow: inset 0 -.4em 0 0 {{levelColors.admin}},
		inset 0 .4em 0 0 {{levelColors.admin}} !important;
	}
</style>
<script type="text/javascript" src="/js/chat-handle.js"></script>
